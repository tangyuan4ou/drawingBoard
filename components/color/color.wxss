.color_container {
  position: absolute;
  bottom: 200rpx; right: 50rpx;
  width: 600rpx;
  height: 530rpx;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
}

.color_wrapper {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  width: 100%;
  height: 450rpx;
  border-radius: 15rpx;
  background: rgba(204, 204, 204, .5);
}

.color_item {
  width: 50rpx;
  height: 50rpx;
}

.c_common_item {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 10rpx 0rpx;
  border-radius: 50rpx;
}

.color {
  transform: translateY(-13rpx);
  vertical-align: middle;
}

.title {
  width: 160rpx;
  padding-left: 25rpx;
  line-height: 50rpx;
}

.c_avtive {
  width: 40rpx;
  height: 40rpx;
  border: 5rpx solid #000;
}

.color_item:nth-child(1) {
  border-top-left-radius: 15rpx;
}

.color_item:nth-child(12) {
  border-top-right-radius: 15rpx;
}

.color_item:nth-child(97) {
  border-bottom-left-radius: 15rpx;
}

.color_item:nth-child(108) {
  border-bottom-right-radius: 15rpx;
}